@{
    ViewData["Title"] = "Home Page";
}

    <div class="head-image"></div>
    <h1 class="display-4 text-center">Welcome to our shop</h1>

<div class="page-holder">
    <div class="list-group categories-list">
        <p class="list-group-item list-group-item-action active text-center catalog-header">
            Каталог товаров
        </p>
        @foreach (Category category in ViewBag.Categories)
        {
            if (category.CategoryName != "No Category")
            {
                <a asp-action="SelectCategory" asp-route-id="@category.Id" class="list-group-item list-group-item-action category-selection-link">@category.CategoryName</a>
            }
        }
    </div>
    <div id="carouselExampleIndicators" class="carousel slide bg-secondary flex-grow-1 cor" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="cor-img d-block w-100" src="~/Images/Electronics1.jpg" height="400" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="cor-img d-block w-100" src="~/Images/Electronics2.jpg" height="400" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="cor-img d-block w-100" src="~/Images/Electronics4.jpg" height="400" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>l
