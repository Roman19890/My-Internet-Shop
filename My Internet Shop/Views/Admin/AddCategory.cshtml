@model MyInternetShop.ViewModels.AddCategoryViewModel
@{
    ViewBag.Title = "Добавление категории";
}
<h2 class="text-center mw-360 bg-primary">Добавление категории</h2>
<a class="adm-link back-link" asp-action="Category">< Назад</a>
<div class="container mw-360">
    <div class="d-flex justify-content-center">
        <form asp-action="AddCategory" asp-controller="Admin" method="post" class="col-3 col-md-3 mw-280">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label font-weight-bolder"></label>
                <input type="text" asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
@await Html.PartialAsync("_ValidationScriptsPartial")