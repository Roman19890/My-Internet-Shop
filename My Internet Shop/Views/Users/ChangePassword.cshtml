@model MyInternetShop.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
@*<div class="d-flex user-edit-links-cont h-40 align-items-center justify-content-between">*@
<a class="adm-link back-link-change-password" asp-controller="Users" asp-action="Edit" asp-route-name="@Model.UserName">< Назад</a>
<h2 class="text-center">Изменение пароля</h2>
@*</div>*@
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserName" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>
@await Html.PartialAsync("_ValidationScriptsPartial")
